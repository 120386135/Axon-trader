<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="org.axonframework.samples.trader.app"/>

    <bean id="orderBookRepository" class="org.axonframework.eventsourcing.GenericEventSourcingRepository">
        <constructor-arg value="org.axonframework.samples.trader.app.command.trading.OrderBook"/>
        <property name="eventBus" ref="eventBus"/>
        <property name="eventStore" ref="eventStore"/>
    </bean>

    <bean id="tradeItemRepository" class="org.axonframework.eventsourcing.GenericEventSourcingRepository">
        <constructor-arg value="org.axonframework.samples.trader.app.command.trading.TradeItem"/>
        <property name="eventBus" ref="eventBus"/>
        <property name="eventStore" ref="eventStore"/>
    </bean>

    <bean id="userRepository" class="org.axonframework.eventsourcing.GenericEventSourcingRepository">
        <constructor-arg value="org.axonframework.samples.trader.app.command.user.User"/>
        <property name="eventBus" ref="eventBus"/>
        <property name="eventStore" ref="eventStore"/>
    </bean>

</beans>